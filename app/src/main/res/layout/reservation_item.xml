<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reservation_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp" >

    <TextView
        android:id="@+id/day_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="@string/default_date"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@color/purple_500"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/button_add_session_reservation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/day_text"
        android:layout_margin="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"
        app:srcCompat="@drawable/ic_add_session" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/button_add_session_reservation"
        android:layout_marginTop="20dp"
        android:background="#A1A0A0" />

</RelativeLayout>